{
  "title": "MongoDBVectorSearchToolArgs",
  "type": "object",
  "properties": {
    "query": {
      "type": "string",
      "description": "The query to search and retrieve relevant information from the MongoDB database."
    },
    "connection_string": {
      "type": "string",
      "description": "MongoDB connection string, e.g., 'mongodb://localhost:27017'."
    },
    "database_name": {
      "type": "string",
      "description": "Name of the MongoDB database."
    },
    "collection_name": {
      "type": "string",
      "description": "Name of the MongoDB collection."
    },
    "vector_index_name": {
      "type": "string",
      "description": "Name of the Atlas vector index.",
      "default": "vector_index"
    },
    "text_key": {
      "type": "string",
      "description": "MongoDB field containing text for each document.",
      "default": "text"
    },
    "embedding_key": {
      "type": "string",
      "description": "MongoDB field containing embeddings.",
      "default": "embedding"
    },
    "dimensions": {
      "type": "integer",
      "description": "Number of dimensions in the embedding vector.",
      "default": 1536
    },
    "embedding_model": {
      "type": "string",
      "description": "OpenAI embedding model to use.",
      "default": "text-embedding-3-large"
    },
    "limit": {
      "type": "integer",
      "description": "Number of documents to return from a search.",
      "default": 4
    },
    "oversampling_factor": {
      "type": "integer",
      "description": "Factor to multiply limit by for candidate generation.",
      "default": 10
    },
    "include_embeddings": {
      "type": "boolean",
      "description": "Whether to include embeddings in the search results.",
      "default": false
    }
  },
  "required": ["query", "openai_api_key", "connection_string", "database_name", "collection_name"]
}