FROM python:3.12.3

WORKDIR /home/user/root/app

RUN pip install --upgrade --no-cache-dir pip setuptools wheel

RUN pip install poetry

COPY ./pyproject.toml .
COPY ./poetry.lock .

RUN poetry config virtualenvs.create false 
RUN poetry install --no-root
RUN rm -rf /root/.cache

COPY . .

CMD python main.py
