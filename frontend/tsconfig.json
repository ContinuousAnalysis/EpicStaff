{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    // "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"],
    "baseUrl": "./",
    "paths": {
      "@shared/animations": ["src/app/shared/animations/index.ts"],
      "@shared/components": ["src/app/shared/components/index.ts"],
      "@shared/constants": ["src/app/shared/constants/index.ts"],
      "@shared/directives": ["src/app/shared/directives/index.ts"],
      "@shared/form-validators": ["src/app/shared/form-validators/index.ts"],
      "@shared/material-forms": ["src/app/shared/material-forms/index.ts"],
      "@shared/models": ["src/app/shared/models/index.ts"],
      "@shared/services": ["src/app/shared/services/index.ts"],
      "@shared/utils": ["src/app/shared/utils/index.ts"],
      "@services": ["src/app/services/index.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
